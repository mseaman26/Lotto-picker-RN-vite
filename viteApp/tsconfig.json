{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,  // Allows .js and .jsx files
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
